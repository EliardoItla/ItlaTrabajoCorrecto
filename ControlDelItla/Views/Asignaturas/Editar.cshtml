@model ControlDelItla.Models.TableView.AsignaturaView

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Asignaturas", FormMethod.Post))
{
    <div class="row" style="margin-left:35px">
        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(f => f.Nombre)
                <div class="col-md-10">
                    @Html.TextBoxFor(f => f.Nombre, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10" style="margin-left:auto">
                    <input type="submit" value="Editar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}